{% extends "components/_main.jinja" %}

{% block title %}{{ user.display_name or user.username }}'s Profile{% endblock %}

{% block main %}
<!-- Apply custom styles if user has customizations -->
{% if user_obj and (user_obj.can_write_articles or user_obj.is_admin) %}
<style>
    :root {
        --custom-bg: {{ user_obj.custom_bg_color or '#0a0e27' }};
        --custom-text: {{ user_obj.custom_text_color or '#e2e8f0' }};
        --custom-accent: {{ user_obj.custom_accent_color or '#06b6d4' }};
    }
    .profile-customized {
        {% if user_obj.custom_bg_image %}
        background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), 
                    url('{{ url_for('static', filename=user_obj.custom_bg_image) }}') center/cover !important;
        {% else %}
        background: var(--custom-bg) !important;
        {% endif %}
        color: var(--custom-text) !important;
        font-size: {{ user_obj.custom_font_size or '16px' }} !important;
        font-family: {{ user_obj.custom_font_family or 'system-ui' }} !important;
        border-color: var(--custom-accent) !important;
        position: relative;
        backdrop-filter: blur(10px);
    }
    .profile-customized::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: inherit;
        filter: blur(0px);
        z-index: -1;
    }
    .profile-customized a {
        color: var(--custom-accent) !important;
    }
    .profile-customized .button {
        border-color: var(--custom-accent) !important;
    }
</style>
{% endif %}

<div class="card {% if user_obj and (user_obj.can_write_articles or user_obj.is_admin) %}profile-customized{% endif %}">
    <div style="display: flex; align-items: start; gap: 2rem; margin-bottom: 2rem;">
        <div style="flex-shrink: 0;">
            {% if user.profile_picture %}
                <img src="{{ url_for('static', filename=user.profile_picture) }}" alt="Profile" style="width: 150px; height: 150px; border-radius: 10px; object-fit: cover; border: 3px solid var(--card-border);">
            {% else %}
                <div style="width: 150px; height: 150px; border-radius: 10px; background: linear-gradient(135deg, var(--purple), var(--cyan)); display: flex; align-items: center; justify-content: center; font-size: 3rem; color: white; font-weight: bold;">
                    {{ (user.display_name or user.username)[0]|upper }}
                </div>
            {% endif %}
        </div>
        
        <div style="flex-grow: 1;">
            <h2 style="margin-bottom: 0.5rem;">{{ user.display_name or user.username }}</h2>
            <p style="color: var(--muted); margin-bottom: 1rem;">@{{ user.username }}</p>
            
            {% if user.bio %}
                <p style="margin-bottom: 1rem;">{{ user.bio }}</p>
            {% endif %}
            
            <div style="display: flex; flex-wrap: wrap; gap: 1rem; margin-bottom: 1rem;">
                {% if user.location %}
                    <span style="color: var(--muted);">
                        üìç {{ user.location }}
                    </span>
                {% endif %}
                
                {% if user.email %}
                    <span style="color: var(--muted);">
                        ‚úâÔ∏è <a href="mailto:{{ user.email }}" style="color: var(--cyan);">{{ user.email }}</a>
                    </span>
                {% endif %}
                
                {% if user.website %}
                    <span style="color: var(--muted);">
                        üîó <a href="{{ user.website }}" target="_blank" style="color: var(--cyan);">Website</a>
                    </span>
                {% endif %}
            </div>
            
            <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
                {% if user.twitter %}
                    <a href="https://twitter.com/{{ user.twitter.lstrip('@') }}" target="_blank" style="padding: 0.5rem 1rem; background: rgba(29, 161, 242, 0.1); color: #1DA1F2; border-radius: 5px; text-decoration: none; border: 1px solid #1DA1F2;">
                        <i class="bi bi-twitter"></i> Twitter
                    </a>
                {% endif %}
                
                {% if user.github %}
                    <a href="https://github.com/{{ user.github }}" target="_blank" style="padding: 0.5rem 1rem; background: rgba(255, 255, 255, 0.1); color: var(--text); border-radius: 5px; text-decoration: none; border: 1px solid var(--card-border);">
                        <i class="bi bi-github"></i> GitHub
                    </a>
                {% endif %}
                
                {% if user.youtube %}
                    <a href="https://youtube.com/{{ user.youtube }}" target="_blank" style="padding: 0.5rem 1rem; background: rgba(255, 0, 0, 0.1); color: #FF0000; border-radius: 5px; text-decoration: none; border: 1px solid #FF0000;">
                        <i class="bi bi-youtube"></i> YouTube
                    </a>
                {% endif %}
                
                {% if user.twitch %}
                    <a href="https://twitch.tv/{{ user.twitch }}" target="_blank" style="padding: 0.5rem 1rem; background: rgba(145, 70, 255, 0.1); color: #9146FF; border-radius: 5px; text-decoration: none; border: 1px solid #9146FF;">
                        <i class="bi bi-twitch"></i> Twitch
                    </a>
                {% endif %}
                
                {% if user.linkedin %}
                    <a href="https://linkedin.com/in/{{ user.linkedin }}" target="_blank" style="padding: 0.5rem 1rem; background: rgba(0, 119, 181, 0.1); color: #0077B5; border-radius: 5px; text-decoration: none; border: 1px solid #0077B5;">
                        <i class="bi bi-linkedin"></i> LinkedIn
                    </a>
                {% endif %}
                
                {% if user.instagram %}
                    <a href="https://instagram.com/{{ user.instagram.lstrip('@') }}" target="_blank" style="padding: 0.5rem 1rem; background: rgba(225, 48, 108, 0.1); color: #E1306C; border-radius: 5px; text-decoration: none; border: 1px solid #E1306C;">
                        <i class="bi bi-instagram"></i> Instagram
                    </a>
                {% endif %}
                
                {% if user.tiktok %}
                    <a href="https://tiktok.com/{{ user.tiktok }}" target="_blank" style="padding: 0.5rem 1rem; background: rgba(0, 0, 0, 0.1); color: var(--text); border-radius: 5px; text-decoration: none; border: 1px solid var(--card-border);">
                        <i class="bi bi-tiktok"></i> TikTok
                    </a>
                {% endif %}
                
                {% if user.discord %}
                    <span style="padding: 0.5rem 1rem; background: rgba(88, 101, 242, 0.1); color: #5865F2; border-radius: 5px; border: 1px solid #5865F2;">
                        <i class="bi bi-discord"></i> {{ user.discord }}
                    </span>
                {% endif %}
            </div>
        </div>
    </div>
    
    {% if is_own_profile %}
        <div style="display: flex; gap: 1rem; margin-top: 2rem; padding-top: 1.5rem; border-top: 1px solid var(--card-border);">
            <a href="{{ url_for('profile.edit_profile') }}" class="button">‚úèÔ∏è Edit Profile</a>
            {% if can_customize %}
                <a href="{{ url_for('profile.customize_page') }}" class="button" style="background: rgba(6, 182, 212, 0.2); border-color: var(--cyan); color: var(--cyan);">
                    üé® Customize Page
                </a>
            {% endif %}
            <a href="{{ url_for('auth.change_password') }}" class="button" style="background: rgba(var(--purple-rgb), 0.2); color: var(--purple);">
                üîí Change Password
            </a>
        </div>
    {% endif %}
    
    <p style="margin-top: 2rem;">
        <a class="button" href="{{ url_for('public.index') }}" style="background: rgba(var(--cyan-rgb), 0.2); color: var(--cyan);">Back to Home</a>
    </p>
</div>
{% endblock %}

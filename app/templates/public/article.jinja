{% extends "components/_main.jinja" %}

{% block title %}{{ article.title }}{% endblock %}

{% block main %}
<div class="card">
  <h2>{{ article.title }}</h2>
  <p><em>{{ article.date.strftime('%B %d, %Y') }}</em></p>
  <div class="article-body">
    {{ article.content | safe }}
  </div>
  <p style="margin-top:1rem;"><a class="button" href="{{ url_for('public.articles') }}">Back to Articles</a></p>
</div>
{% endblock %}

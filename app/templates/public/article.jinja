{% extends "components/_main.jinja" %}

{% block title %}{{ article.title }}{% endblock %}

{% block main %}
<div class="card">
  <!-- Article Header -->
  <div style="border-bottom: 2px solid var(--card-border); padding-bottom: 1.5rem; margin-bottom: 1.5rem;">
    <h2>{{ article.title }}</h2>
    <div style="display: flex; align-items: center; gap: 1rem; margin-top: 0.75rem; flex-wrap: wrap;">
      {% if article.author %}
        <div style="display: flex; align-items: center; gap: 0.5rem;">
          {% if article.author.profile_picture %}
            <img src="{{ url_for('static', filename='uploads/profiles/' + article.author.profile_picture) }}" 
                 alt="{{ article.author.username }}" 
                 style="width: 32px; height: 32px; border-radius: 50%; object-fit: cover;">
          {% else %}
            <div style="width: 32px; height: 32px; border-radius: 50%; background: linear-gradient(135deg, var(--dark-purple), var(--blue)); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 0.9rem;">
              {{ article.author.username[0].upper() }}
            </div>
          {% endif %}
          <a href="{{ url_for('profile.view_profile', username=article.author.username) }}" style="color: var(--text); font-weight: 500;">
            {{ article.author.display_name or article.author.username }}
          </a>
        </div>
        <span class="muted">•</span>
      {% endif %}
      <span class="muted"><em>{{ article.date.strftime('%B %d, %Y') }}</em></span>
      <span class="muted">•</span>
      <span class="muted"><i class="bi bi-chat-dots"></i> {{ article.comments_count }} comments</span>
      <span class="muted">•</span>
      <span class="muted"><i class="bi bi-heart-fill"></i> {{ article.likes_count }} likes</span>
    </div>
  </div>

  <!-- Article Body -->
  <div class="article-body" style="margin-bottom: 2rem;">
    {{ article.content | markdown }}
  </div>

  <!-- Engagement Section -->
  <div style="border-top: 2px solid var(--card-border); border-bottom: 2px solid var(--card-border); padding: 1rem 0; margin-bottom: 2rem;">
    <div style="display: flex; gap: 1rem; align-items: center; flex-wrap: wrap;">
      <!-- Like Button -->
      <button id="likeBtn" 
              class="button" 
              onclick="toggleLike()"
              style="display: flex; align-items: center; gap: 0.5rem; background: {{ 'var(--cyan)' if article.user_has_liked else 'rgba(6,182,212,0.1)' }}; color: {{ 'white' if article.user_has_liked else 'var(--cyan)' }}; border: 1px solid var(--cyan);">
        <i class="bi bi-heart{{ '-fill' if article.user_has_liked else '' }}"></i>
        <span id="likeCount">{{ article.likes_count }}</span> 
        <span>{{ 'Liked' if article.user_has_liked else 'Like' }}</span>
      </button>

      <!-- Share Buttons -->
      <span class="muted" style="margin: 0 0.5rem;">Share:</span>
      <a href="https://twitter.com/intent/tweet?text={{ article.title | urlencode }}&url={{ request.url | urlencode }}" 
         target="_blank" 
         class="button" 
         style="background: #1DA1F2; color: white; padding: 0.5rem 1rem;">
        <i class="bi bi-twitter"></i> Twitter
      </a>
      <a href="https://www.facebook.com/sharer/sharer.php?u={{ request.url | urlencode }}" 
         target="_blank" 
         class="button" 
         style="background: #1877F2; color: white; padding: 0.5rem 1rem;">
        <i class="bi bi-facebook"></i> Facebook
      </a>
      <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ request.url | urlencode }}" 
         target="_blank" 
         class="button" 
         style="background: #0A66C2; color: white; padding: 0.5rem 1rem;">
        <i class="bi bi-linkedin"></i> LinkedIn
      </a>
      <button onclick="copyLink()" 
              class="button" 
              style="background: rgba(160,174,192,0.1); color: var(--muted); padding: 0.5rem 1rem;">
        <i class="bi bi-link-45deg"></i> Copy Link
      </button>
    </div>
  </div>

  <!-- Comments Section -->
  <div style="margin-bottom: 2rem;">
    <h3 style="margin-bottom: 1rem;">
      <i class="bi bi-chat-dots"></i> Comments ({{ article.comments|length }})
    </h3>

    <!-- Add Comment Form -->
    {% if session.logged_in %}
      <form method="POST" action="{{ url_for('public.add_comment', slug=article.slug) }}" style="margin-bottom: 2rem;">
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
        <textarea name="content" 
                  rows="4" 
                  placeholder="Write your comment here..." 
                  required
                  style="width: 100%; padding: 0.75rem; border: 1px solid var(--card-border); border-radius: 8px; background: var(--background); color: var(--text); font-family: inherit; resize: vertical;"></textarea>
        <button type="submit" class="button" style="margin-top: 0.5rem;">
          <i class="bi bi-send"></i> Post Comment
        </button>
      </form>
    {% else %}
      <div style="background: rgba(6,182,212,0.1); border: 1px solid var(--cyan); border-radius: 8px; padding: 1rem; margin-bottom: 2rem; text-align: center;">
        <p class="muted">
          <a href="{{ url_for('auth.login', next=request.url) }}" style="color: var(--cyan);">Log in</a> to leave a comment
        </p>
      </div>
    {% endif %}

    <!-- Display Comments -->
    {% if article.comments %}
      <div style="display: flex; flex-direction: column; gap: 1rem;">
        {% for comment in article.comments %}
          <div style="background: var(--card); border: 1px solid var(--card-border); border-radius: 8px; padding: 1rem;">
            <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.5rem;">
              {% if comment.user.profile_picture %}
                <img src="{{ url_for('static', filename='uploads/profiles/' + comment.user.profile_picture) }}" 
                     alt="{{ comment.user.username }}" 
                     style="width: 32px; height: 32px; border-radius: 50%; object-fit: cover;">
              {% else %}
                <div style="width: 32px; height: 32px; border-radius: 50%; background: linear-gradient(135deg, var(--dark-purple), var(--blue)); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 0.9rem;">
                  {{ comment.user.username[0].upper() }}
                </div>
              {% endif %}
              <div>
                <a href="{{ url_for('profile.view_profile', username=comment.user.username) }}" style="color: var(--text); font-weight: 500;">
                  {{ comment.user.display_name }}
                </a>
                <div class="muted" style="font-size: 0.85rem;">{{ comment.created_at }}</div>
              </div>
            </div>
            <p style="margin: 0;">{{ comment.content }}</p>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p class="muted">No comments yet. Be the first to comment!</p>
    {% endif %}
  </div>

  <!-- Back Button -->
  <p><a class="button" href="{{ url_for('public.articles') }}">← Back to Articles</a></p>
</div>

<script>
  function toggleLike() {
    {% if not session.logged_in %}
      window.location.href = "{{ url_for('auth.login', next=request.url) }}";
      return;
    {% endif %}

    fetch("{{ url_for('public.toggle_like', slug=article.slug) }}", {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        const btn = document.getElementById('likeBtn');
        const icon = btn.querySelector('i');
        const text = btn.querySelector('span:last-child');
        const count = document.getElementById('likeCount');
        
        if (data.liked) {
          icon.className = 'bi bi-heart-fill';
          text.textContent = 'Liked';
          btn.style.background = 'var(--cyan)';
          btn.style.color = 'white';
        } else {
          icon.className = 'bi bi-heart';
          text.textContent = 'Like';
          btn.style.background = 'rgba(6,182,212,0.1)';
          btn.style.color = 'var(--cyan)';
        }
        count.textContent = data.likes_count;
      }
    })
    .catch(error => console.error('Error:', error));
  }

  function copyLink() {
    navigator.clipboard.writeText(window.location.href).then(() => {
      alert('Link copied to clipboard!');
    });
  }
</script>
{% endblock %}

{% extends 'components/_main.jinja' %}

{% block title %}{{ user.username }} Activity - Admin{% endblock %}

{% block content %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-activity"></i> User Activity: {{ user.username }}
        </h1>
        <a href="{{ url_for('admin.users') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Users
        </a>
    </div>

    <!-- User Profile Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-2 text-center">
                    {% if user.profile_picture %}
                        <img src="{{ url_for('static', filename='uploads/profiles/' + user.profile_picture) }}" 
                             alt="{{ user.username }}" 
                             class="rounded-circle" 
                             style="width: 100px; height: 100px; object-fit: cover;">
                    {% else %}
                        <div class="rounded-circle d-inline-flex align-items-center justify-content-center text-white" 
                             style="width: 100px; height: 100px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <span style="font-size: 2.5rem; font-weight: bold;">{{ user.username[0].upper() }}</span>
                        </div>
                    {% endif %}
                </div>
                <div class="col-md-10">
                    <h3>{{ user.display_name or user.username }}</h3>
                    <p class="text-muted mb-2">@{{ user.username }}</p>
                    {% if user.bio %}
                        <p>{{ user.bio }}</p>
                    {% endif %}
                    <div class="mt-3">
                        <span class="badge bg-{{ 'danger' if user.is_admin else 'secondary' }} me-2">
                            {{ 'Admin' if user.is_admin else 'User' }}
                        </span>
                        <small class="text-muted">Joined {{ user.created_at.strftime('%B %d, %Y') }}</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Activity Stats -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h3 class="text-primary">{{ stats.total_articles }}</h3>
                    <p class="text-muted mb-0"><i class="bi bi-file-text"></i> Articles</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h3 class="text-success">{{ stats.total_comments }}</h3>
                    <p class="text-muted mb-0"><i class="bi bi-chat-dots"></i> Comments</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h3 class="text-danger">{{ stats.total_likes }}</h3>
                    <p class="text-muted mb-0"><i class="bi bi-heart-fill"></i> Likes</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Articles Tab -->
    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <h5><i class="bi bi-file-text"></i> Articles ({{ articles|length }})</h5>
        </div>
        <div class="card-body">
            {% if articles %}
                <div class="list-group">
                    {% for article in articles %}
                        <a href="{{ url_for('public.article', slug=article.slug) }}" 
                           class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">{{ article.title }}</h6>
                                <small class="text-muted">{{ article.created_at.strftime('%Y-%m-%d') }}</small>
                            </div>
                            <p class="mb-1 text-muted">{{ article.summary[:100] }}...</p>
                            <small>
                                {% if article.published %}
                                    <span class="badge bg-success">Published</span>
                                {% else %}
                                    <span class="badge bg-warning">Draft</span>
                                {% endif %}
                            </small>
                        </a>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted">No articles yet.</p>
            {% endif %}
        </div>
    </div>

    <!-- Comments Tab -->
    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <h5><i class="bi bi-chat-dots"></i> Recent Comments ({{ comments|length }})</h5>
        </div>
        <div class="card-body">
            {% if comments %}
                <div class="list-group">
                    {% for comment in comments %}
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <small class="text-muted">On article: 
                                    <a href="{{ url_for('public.article', slug=comment.article.slug) }}">
                                        {{ comment.article.title }}
                                    </a>
                                </small>
                                <small class="text-muted">{{ comment.created_at.strftime('%Y-%m-%d %H:%M') }}</small>
                            </div>
                            <p class="mb-1 mt-2">{{ comment.content }}</p>
                            {% if not comment.approved %}
                                <span class="badge bg-warning">Pending Approval</span>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted">No comments yet.</p>
            {% endif %}
        </div>
    </div>

    <!-- Likes Tab -->
    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <h5><i class="bi bi-heart-fill"></i> Recent Likes ({{ likes|length }})</h5>
        </div>
        <div class="card-body">
            {% if likes %}
                <div class="list-group">
                    {% for like in likes %}
                        <a href="{{ url_for('public.article', slug=like.article.slug) }}" 
                           class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <span>{{ like.article.title }}</span>
                                <small class="text-muted">{{ like.created_at.strftime('%Y-%m-%d %H:%M') }}</small>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted">No likes yet.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

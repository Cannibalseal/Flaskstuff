<header class="site-header card" role="banner">
  <div style="display:flex;align-items:center;justify-content:space-between;gap:1rem;">
    <div>
      <h1 style="margin:0; font-size:1.5rem;"><a href="{{ url_for('public.index') }}" style="text-decoration:none;">{{ get_site_settings().site_name }}</a></h1>
      <div style="color: var(--cyan); font-size:0.95rem; opacity: 0.9; margin-top: 0.25rem;">{{ get_site_settings().site_tagline }}</div>
    </div>
    <nav aria-label="Main navigation">
      <a class="button" href="{{ url_for('public.index') }}">Home</a>
      <a class="button" href="{{ url_for('public.about') }}">About</a>
      <a class="button" href="{{ url_for('public.articles') }}">Articles</a>
      {% if custom_pages %}
        {% for page in custom_pages %}
          {% if page.show_in_nav %}
            <a class="button" href="{{ url_for('public.view_page', slug=page.slug) }}">{{ page.title }}</a>
          {% endif %}
        {% endfor %}
      {% endif %}
      {% if session.get('logged_in') %}
        <a class="button" href="{{ url_for('profile.view_profile') }}">Profile</a>
        {% if session.get('is_admin') or session.get('can_write_articles') %}
          <a class="button" href="{{ url_for('admin.dashboard') }}" style="background: rgba(6,182,212,0.2); border-color: var(--cyan); color: var(--cyan);">
            {% if session.get('is_admin') %}Admin{% else %}My Articles{% endif %}
          </a>
        {% endif %}
        <a class="button" href="{{ url_for('auth.logout') }}">Logout</a>
      {% else %}
        <a class="button" href="{{ url_for('auth.login') }}">Login</a>
      {% endif %}
    </nav>
  </div>
</header>

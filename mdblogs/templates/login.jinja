{% extends "_main.jinja" %}

{% block title %}Log In{% endblock %}

{% block main %}
<div class="card">
  <h2>Sign in</h2>
  <p class="muted">Enter your credentials to access the admin area.</p>

  <form action="{{ url_for('view_login') }}" method="post" style="max-width:420px;margin:1rem auto;text-align:left;">
    {% if error %}
      <div style="color:#8b0000;margin-bottom:0.5rem;">{{ error }}</div>
    {% endif %}
    <label for="username" class="muted">Username</label>
    <input id="username" name="username" type="text" placeholder="yourname" style="width:100%;padding:0.5rem;margin:0.35rem 0;border-radius:6px;border:1px solid rgba(16,24,32,0.08);">

    <label for="password" class="muted">Password</label>
    <input id="password" name="password" type="password" placeholder="••••••" style="width:100%;padding:0.5rem;margin:0.35rem 0;border-radius:6px;border:1px solid rgba(16,24,32,0.08);">

    <p style="margin-top:1rem; text-align:center;">
      <button class="button" type="submit">Sign in</button>
      <a class="button" href="{{ url_for('index') }}">Cancel</a>
    </p>
  </form>
</div>
{% endblock %}
